{% extends 'base.html.twig' %}
{% block debut %}

	<img src="https://a-static.besthdwallpaper.com/beautiful-woman-working-out-with-rope-in-gym-wallpaper-2880x960-91989_104.jpg" width="1920" height="500"/>
	<section class="classes-section spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-12"></div>

				{% for i in serie.exercices %}
					<div class="col-lg-6 col-md-6">
						<div class="class-item">
							<div class="ci-pic">
								<img src={{ asset('uploads/exercices/' ~ i.imageExercice) }} height="300px" width="100px"/>
							</div>
							<div class="ci-text">

								<h4>{{i.nomExercice}}</h4>
								<a href="{{path('exercice',{'id':i.id}) }}">
									<i class="fa fa-angle-right"></i>
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
				<div class="col-lg-12 text-center">
					<div class="bs-text">

						<a href="{{path('listSerieF',) }}" class="primary-btn  btn-normal">Retour</a>
					</div>
				</div>

			</section>
		{% endblock %}
