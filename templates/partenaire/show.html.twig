{% extends 'base.html.twig' %}

{% block title %}Partenaire{% endblock %}

{% block body %}
    <h1>Partenaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partenaire.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ partenaire.nom }}</td>
            </tr>
            <tr>
                <th>Datef</th>
                <td>{{ partenaire.datef ? partenaire.datef|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Local</th>
                <td>{{ partenaire.local }}</td>
            </tr>
            <tr>
                <th>Image</th>
               <td> <img style="width: 200px" src="{{ asset('uploads/' ~ partenaire.image) }}"> </td>
            </tr>
            <tr>
                <th>Descr</th>
                <td>{{ partenaire.descr }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_partenaire') }}"><i class="fas fa-2x fa-hand-point-left"></i></a>

    <a href="{{ path('app_partenaire_edit', {'id': partenaire.id}) }}"><i class="fas fa-2x fa-edit"></i></a>

   {#{{ include('partenaire/_delete_form.html.twig') }}#} 
{% endblock %}
